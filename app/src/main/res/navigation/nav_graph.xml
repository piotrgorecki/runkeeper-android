<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/forecast_tab">

    <fragment
        android:id="@+id/forecast_tab"
        android:name="pl.training.runkeeper.forecast.views.ForecastListFragment"
        android:label="Forecast"
        tools:layout="@layout/fragment_forecast_list">
        <action
            android:id="@+id/show_forecast_details"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/show_settings"
            app:destination="@id/SettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/profile_tab"
        android:name="pl.training.runkeeper.profile.views.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="pl.training.runkeeper.forecast.views.ForecastDetailsFragment"
        android:label="Forecast details"
        tools:layout="@layout/fragment_forecast_details"/>

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="pl.training.runkeeper.commons.views.SettingsFragment"
        android:label="settings">
    </fragment>

</navigation>