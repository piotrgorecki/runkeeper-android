<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/forecast_settings">

        <ListPreference
            app:defaultValue="7"
            app:entries="@array/days"
            app:entryValues="@array/days_values"
            app:key="forecast_days"
            app:summary="Forecast duration in days"
            app:title="@string/forecast_duration"/>

        <SwitchPreferenceCompat
            app:key="cache_enabled"
            app:summary="Enable forecast data cache"
            app:title="@string/cache"/>

    </PreferenceCategory>

</PreferenceScreen>